void printLocalTime() {
  u8g2.setFontDirection(0);
  if (!getLocalTime(&timeinfo)) {
    Serial.println("Failed to obtain time");
    return;
  }
  Serial.println(&timeinfo, "%b %d %a %R");  // 格式化输出
}

